      <Label Text="5"/> 
   </StackLayout> 

   <StackLayout BackgroundColor="Navy" FlexLayout.Basis="600" Padding="10">
      <Label Text="1" /> 
   </StackLayout>
   <StackLayout BackgroundColor="Green" Padding="10">
      <Label Text="2" /> 
   </StackLayout>
   <StackLayout BackgroundColor="Red" Padding="10">
      <Label Text="3" /> 
   </StackLayout>
   <StackLayout BackgroundColor="Purple" Padding="10" >
      <Label Text="4"/> 
   </StackLayout>

